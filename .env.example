# Database Configuration
DATABASE_URL="postgresql://username:password@host:port/database?sslmode=require"
DB_URL="postgresql://username:password@host:port/database?sslmode=require"

# Server Ports
HTTP_PORT=3001
WS_PORT=8081
FRONTEND_PORT=3000

# JWT Configuration - Use a strong, random secret in production
JWT_SECRET=your-super-secure-jwt-secret-key-here

# Environment
NODE_ENV=production

# Domain Configuration
DOMAIN=your-domain.com
FRONTEND_URL=https://your-domain.com
BACKEND_URL=https://your-domain.com/api
WEBSOCKET_URL=wss://your-domain.com/ws

# Frontend Environment Variables (NEXT_PUBLIC_ prefix for client-side access)
NEXT_PUBLIC_BACKEND_URL=https://your-domain.com/api
NEXT_PUBLIC_WEBSOCKET_URL=wss://your-domain.com/ws

# CORS Origins (comma-separated)
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com